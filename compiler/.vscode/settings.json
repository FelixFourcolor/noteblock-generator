{
	"files.exclude": {
		"**/node_modules": true,
		"pnpm-lock.yaml": true,
		"coverage": true,
		"dist/**/*.map": true,
		// hide test/data except test/data/projects
		"test/data/[!p]*": true,
		"test/data/p[!r]*": true,
		"test/data/pr[!o]*": true,
		"test/data/pro[!j]*": true,
		"test/data/proj[!e]*": true,
		"test/data/proje[!c]*": true,
		"test/data/projec[!t]*": true,
		"test/data/project[!s]*": true,
		"test/data/projects[!/]": true,
		// hide test/**/repo except test/**/repo/src
		"test/**/repo/[!s]*": true,
		"test/**/repo/s[!r]*": true,
		"test/**/repo/sr[!c]*": true,
		"test/**/repo/src[!/]": true
	},
	"search.exclude": { "dist": true }
}
