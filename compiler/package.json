{
	"name": "noteblock-compiler",
	"version": "0.3.0",
	"license": "MIT",
	"bin": {
		"nbc": "dist/main.js"
	},
	"engines": {
		"node": ">=22"
	},
	"dependencies": {
		"chokidar": "^5.0.0",
		"lodash": "npm:lodash-es@^4.17.21",
		"ts-pattern": "^5.9.0",
		"typia": "^10.1.0",
		"yaml": "^2.8.2",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/lodash": "^4.17.21",
		"@types/node": "^24.10.1",
		"@types/yargs": "^17.0.35",
		"@vitest/coverage-v8": "^4.0.15",
		"@vitest/ui": "^4.0.15",
		"ajv": "^8.17.1",
		"concurrently": "^9.2.1",
		"esbuild": "^0.27.1",
		"ts-arithmetic": "^0.1.1",
		"ts-patch": "^3.3.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"type": "module",
	"files": [
		"dist"
	],
	"scripts": {
		"prepare": "ts-patch install",
		"build": "pnpm build:tsc; pnpm build:esbuild",
		"build:watch": "concurrently \"pnpm build:tsc --watch\" \"pnpm build:esbuild --watch\"",
		"build:tsc": "tsc -p tsconfig.build.json",
		"build:esbuild": "esbuild ./build/main.js --bundle --platform=node --format=esm --alias:@=./build --outfile=./dist/main.js --packages=external",
		"clean": "rm -rf dist build coverage",
		"test": "vitest run"
	}
}
