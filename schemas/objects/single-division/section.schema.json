{
    "oneOf": [
        { "$ref": "#/$def/section" },
        { "$ref": "../../properties/meta.schema.json#/reference" }
    ],
    "$def": {
        "section": {
            "title": "Single-division section",
            "type": "object",
            "additionalProperties": false,
            "required": [ "voices" ],
            "properties": {
                "voices": {
                    "title": "List of voices to be played in parallel",
                    "description": "Higher on the list == closer to the player.",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "oneOf": [
                            { "$ref": "voice.schema.json#" },
                            {
                                "title": "Voice group",
                                "description": "Multiple voices that sit at the same position",
                                "type": "array",
                                "minItems": 1,
                                "items": { "$ref": "voice.schema.json#" }
                            },
                            { 
                                "title": "Empty voice",
                                "$ref": "../../properties/meta.schema.json#/default" 
                            }
                        ]
                    }
                },
                "name": { "$ref": "../../properties/globals.schema.json#/name" },
                "time": { "$ref": "../../properties/globals.schema.json#/time" },
                "width": { "$ref": "../../properties/globals.schema.json#/width" },
                "beat": { "$ref": "../../properties/globals.schema.json#/beat" },
                "tick": { "$ref": "../../properties/globals.schema.json#/tick" },
                "trillStyle": { "$ref": "../../properties/globals.schema.json#/trillStyle" },
                "instrument": { "$ref": "../../properties/globals.schema.json#/instrument" },
                "dynamic": { "$ref": "../../properties/globals.schema.json#/dynamic" },
                "transpose": { "$ref": "../../properties/globals.schema.json#/transpose" },
                "sustain": { "$ref": "../../properties/globals.schema.json#/sustain" }
            }
        }
    }
}