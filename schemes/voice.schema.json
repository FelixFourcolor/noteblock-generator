{
    "title": "Voice",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "title": "Voice's name",
            "allOf": [ { "$ref": "global.schema.json#/definitions/name" } ]
        },
        "notes": {
            "title": "Notes",
            "oneOf": [
                { "$ref": "notes.schema.json#" },
                {
                    "title": "Path to notes",
                    "allOf": [ { "$ref": "global.schema.json#/definitions/filePath" } ]
                }
            ]
        },
        "time": { "$ref": "global.schema.json#/definitions/time" },
        "beat": { "$ref": "global.schema.json#/definitions/beat" },
        "trillStartsOn": { "$ref": "global.schema.json#/definitions/trillStartsOn" },
        "position": {
            "oneOf": [
                {
                    "title": "Single placement",
                    "allOf": [ { "$ref": "#/definitions/position" } ]
                },
                {
                    "title": "Multiple placements",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/position" }
                }
            ]
        },
        "instrument": {
            "title": "Noteblock instrument",
            "oneOf": [
                {
                    "description": "For single placement.",
                    "allOf": [ { "$ref": "global.schema.json#/definitions/instrument" } ]
                },
                {
                    "description": "For multiple placements; the length must match the number of placements.",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "global.schema.json#/definitions/instrument" }
                }
            ]
        },
        "dynamic": {
            "oneOf": [
                {
                    "description": "For single placement.",
                    "allOf": [ { "$ref": "#/definitions/dynamic" } ]
                },
                {
                    "description": "For multiple placements; the length must match the number of placements.",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/dynamic" }
                }
            ]
        },
        "transpose": {
            "oneOf": [
                {
                    "description": "For single placement.",
                    "allOf": [ { "$ref": "#/definitions/transpose" } ]
                },
                {
                    "description": "For multiple placements; the length must match the number of placements.",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/transpose" }
                }
            ]
        },
        "sustain": {
            "oneOf": [
                {
                    "description": "For single placement.",
                    "allOf": [ { "$ref": "#/definitions/sustain" } ]
                },
                {
                    "description": "For multiple placements; the length must match the number of placements.",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/sustain" }
                }
            ]
        }
    },
    "definitions": {
        "position": {
            "oneOf": [
                { "$ref": "global.schema.json#/definitions/default" },
                {
                    "description": "Level of placement.",
                    "type": "integer",
                    "exclusiveMinimum": 0
                },
                {
                    "description": "Relative level: + to raise, - to lower.",
                    "type": "string",
                    "pattern": "^[+-]\\d+$"
                },
                {
                    "description": "Division of placement.",
                    "type": "string",
                    "pattern": "^(left|right|bothsides)$"
                },
                {
                    "description": "Switch division: left becomes right, right becomes left",
                    "const": "switch"
                },
                {
                    "description": "Division & Level of placement.",
                    "type": "string",
                    "pattern": "^(left|right|bothsides|switch)\\s*[+-]?\\d+$"
                }
            ]
        },
        "dynamic": {
            "anyOf": [
                { "$ref": "global.schema.json#/definitions/dynamic" },
                {
                    "title": "Relative loudness: + to raise, - to lower.",
                    "type": "string",
                    "pattern": "^[+-][0-4]$"
                },
                {
                    "title": "Finely tune the loudness during each note.",
                    "type": "string",
                    "pattern": "^([+-]?[0-4]((\\s+[+-]?|\\s*[+-])(([1-9]\\d*b?)?\\.|[1-9]\\d*b?\\.?))+(\\s*,\\s*|$))+$"
                }
            ]
        },
        "transpose": {
            "oneOf": [
                { "$ref": "global.schema.json#/definitions/transpose" },
                {
                    "title": "Relative transpose; in semitones.",
                    "type": "string",
                    "pattern": "^[+-]\\d+"
                }
            ]
        },
        "sustain": {
            "oneOf": [
                { "$ref": "global.schema.json#/definitions/sustain" },
                {
                    "title": "Sustain notes for relative duration",
                    "type": "string",
                    "pattern": "^[+-](([1-9]\\d*b?)?\\.|[1-9]\\d*b?\\.?)"
                }
            ]
        }
    }
}